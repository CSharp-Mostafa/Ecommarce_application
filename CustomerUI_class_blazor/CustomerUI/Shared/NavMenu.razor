 
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Gadget Point</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/brands">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Brand
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/categories">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Category
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/subcategories">
                <span class="oi oi-list-rich" aria-hidden="true"></span> SubCategory
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/products">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Prodcut
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/suppliers">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Supplier
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/fetchSupplier">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Supplier Report
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
 


